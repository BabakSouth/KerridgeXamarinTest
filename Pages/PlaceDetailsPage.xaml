<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KerridgeTask.Pages.PlaceDetailsPage"
             
             Title="Place Detail"
             >

    <StackLayout Padding="30">
        <Label Text="Name:" FontSize="20" />
        <Label x:Name="NameLabel" FontSize="14" />
        <Label Text="Formatted Address:" FontSize="20" />
        <Label x:Name="AddressLabel" FontSize="14" />
        <Label Text="Vicinity:" FontSize="20" />
        <Label x:Name="VicinityLabel" FontSize="14" />
        <Label Text="URL:" FontSize="20" />
        <Label x:Name="UrlLabel" FontSize="14" />
        <Label Text="Longitude and Latitude:" FontSize="20" />
        <Label x:Name="LatLngLabel" FontSize="14" />
        <Label Text="UTC Offset:" FontSize="20" />
        <Label x:Name="UtcOffsetLabel" FontSize="14" />
    </StackLayout>
</ContentPage>
